<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/back_groud_updatepassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/backgroud_updatepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật Khẩu này không tồn tại !"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_margin="15dp"
                android:id="@+id/btnXacNhan1"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_groud_setdialogupdatepasswword"
                android:text="Xác nhận" />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>