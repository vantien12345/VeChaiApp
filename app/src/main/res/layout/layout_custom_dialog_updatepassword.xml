<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/back_groud_updatepassword2"
    android:orientation="vertical">
    <TextView
        android:background="@drawable/backgroud_updatepassword"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="wrap_content"
        android:text="Thay mật khẩu"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/matkhaucu"
            android:background="@drawable/edit_text2"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="15dp"
            android:hint="Nhập mật khẩu cũ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hienthiloi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/matkhaumoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nhập mật khẩu mới"
            android:background="@drawable/edit_text2"
            android:padding="15dp"/>
        <EditText
            android:id="@+id/nhaplaimatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Nhập lại mật khẩu"
            android:background="@drawable/edit_text2"
            android:padding="15dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btnHuy"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:background="@drawable/back_groud_setdialogupdatepasswword"/>
            <Button
                android:id="@+id/btnXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:background="@drawable/back_groud_setdialogupdatepasswword"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>