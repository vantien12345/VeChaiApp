<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/backgroud_nendoipassword"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"/>

        <EditText
            android:id="@+id/matKhauCu"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/changepassword"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_width="300dp"
            android:hint="Nhập mật khẩu cũ"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/matKhauMoi"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/changepassword"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_width="300dp"
            android:hint="Nhập mật khẩu mới"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/nhapLaiMatKhau"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/changepassword"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_width="300dp"
            android:hint="Nhập lại mật khẩu"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnHuyDoiMatKhau"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/back_groud_setdialogupdatepasswword"
                android:text="Hủy" />
            <Button
                android:id="@+id/btnDoiMatKhau"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:background="@drawable/back_groud_setdialogupdatepasswword"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>