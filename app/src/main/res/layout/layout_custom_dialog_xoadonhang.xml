<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/back_groud_updatepassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/backgroud_updatepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có muốn hủy đơn hàng này không ?"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginBottom="15sp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button

                    android:layout_margin="15sp"
                    android:id="@+id/btn_huyXoa"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/back_groud_setdialogupdatepasswword"
                    android:text="huy" />

                <Button
                    android:id="@+id/btnXacNhanXoa"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/back_groud_setdialogupdatepasswword"
                    android:text="Xác nhận" />


            </LinearLayout>





        </LinearLayout>



    </LinearLayout>

</LinearLayout>